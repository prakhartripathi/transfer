<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{ISO8601}} %highlight{%-5level }[%style{%t}] %style{%C{1.}} %style{%X{requestId}}: %msg%n%throwable"/>
        </Console>

        <RollingFile name="RollingFile"
                     fileName="/home/log/${env:HOSTNAME}.log"
                     filePattern="/home/log/traffic-app-%d{dd-MMMM-yyyy-HH}.log.gz">
            <PatternLayout>
                <pattern>[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %X{requestId} - $${env:HOSTNAME} - %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <AsyncLogger name="com.zaxxer" level="DEBUG">
            <AppenderRef ref="RollingFile" />
        </AsyncLogger>

        <!-- LOG everything at INFO level -->
        <Root level="debug">
            <AppenderRef ref="RollingFile"/>
        </Root>

        <Logger name="com.interceptor.traffic" level="INFO"/>

    </Loggers>

</Configuration>